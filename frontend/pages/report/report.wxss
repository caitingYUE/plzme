/* pages/report/report.wxss */

.report-page {
  min-height: 100vh;
  background: var(--bg-primary);
  padding: 32rpx;
  padding-bottom: 120rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  text-align: center;
}

.report-summary {
  background: var(--gradient-primary);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
}

.summary-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.summary-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.report-section {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--card-border);
  box-shadow: var(--card-shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  background: var(--gradient-secondary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.chart-container {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: 20rpx;
  margin-bottom: 20rpx;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
}

.insights-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.insight-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.insight-item:last-child {
  margin-bottom: 0;
}

.insight-icon {
  width: 24rpx;
  height: 24rpx;
  background: var(--gradient-accent);
  border-radius: 50%;
  margin-right: 12rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.insight-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

.progress-bar {
  background: var(--bg-secondary);
  height: 12rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 16rpx 0;
}

.progress-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.emotion-chart {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.emotion-item {
  display: flex;
  align-items: center;
  padding: 12rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.emotion-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.emotion-color.joy { background: #FFD93D; }
.emotion-color.calm { background: #6BCF7F; }
.emotion-color.excited { background: #FF6B6B; }
.emotion-color.thoughtful { background: #4ECDC4; }

.emotion-info {
  flex: 1;
}

.emotion-label {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.emotion-value {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.recommendation-card {
  background: rgba(102, 126, 234, 0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-top: 20rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 12rpx;
}

.recommendation-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.export-btn {
  flex: 1;
  background: var(--gradient-secondary);
  color: white;
  padding: 20rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255, 138, 101, 0.3);
  transition: all 0.2s ease;
}

.export-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 138, 101, 0.4);
}

.share-btn {
  flex: 1;
  background: transparent;
  color: var(--primary-color);
  padding: 20rpx;
  border: 2rpx solid var(--primary-color);
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.share-btn:active {
  background: var(--primary-color);
  color: white;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: var(--text-muted);
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.start-btn {
  background: var(--gradient-primary);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}